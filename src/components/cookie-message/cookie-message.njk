{% macro cookie_message(params) %}
<div class="cookie-container" role="complementary" aria-labelledby="cookie-message-heading" aria-describedby="cookie-message-text">
  <div class="cookie-message">
    <div class="cookie-text">
      <h2 class="h3 mt-0 mb-3" id="cookie-message-heading">
        {{ params.heading | safe }}
      </h2>
      <p class="mt-0" id="cookie-message-text">
        {{ params.message | safe }}
      </p>
    </div>
    <div class="cookie-actions">
      <ul class="inline-list">
        <li>
          <a href="#" class="button button-secondary">{{ params.accept }}</a>
        </li>
        <li>
          <a href="#" class="ml-md-4 button button-secondary">{{ params.decline }}</a>
        </li>
      </ul>
    </div>
  </div>
</div>
{% endmacro %}
